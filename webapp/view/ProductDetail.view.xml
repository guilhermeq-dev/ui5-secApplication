<mvc:View controllerName="com.lab2dev.secapplication.controller.ProductDetail"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m" xmlns:core="sap.ui.core">
    <Page id="page" title="Lista">
		<subHeader>
			<OverflowToolbar>
				<SearchField liveChange=".onSearch" width="100%" />
			</OverflowToolbar>
		</subHeader>

        <content>

            <List
                headerText="Produtos"
                headerLevel="H2"
                items="{/Products}"
                id="idList"
                >

                    <ObjectListItem
                        title="{ProductName}"
                        type="Active"
                        press="onPress"
                        number="{UnitPrice}"
                        >
                        <firstStatus>
                           
                        </firstStatus>

                        <ObjectAttribute text="{ProductName} {UnitsInStock}" />
                        
                    </ObjectListItem>
            </List>

         </content>
    </Page>    
</mvc:View>